<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true"
          android:drawable="@drawable/ic_closed_caption_blue"/>
    <!-- focused -->
    <item android:state_focused="true"
          android:drawable="@drawable/ic_closed_caption_white"/>
    <!-- hovered -->
    <item android:state_hovered="true"
          android:drawable="@drawable/ic_closed_caption_white"/>
    <!-- activated -->
    <item android:state_enabled="true"
          android:drawable="@drawable/ic_closed_caption_white"/>
    <!-- deactivated -->
    <item android:state_enabled="false"
          android:drawable="@drawable/ic_closed_caption_grey"/>
    <!-- default -->
    <item android:drawable="@drawable/ic_closed_caption_white"/>
</selector>